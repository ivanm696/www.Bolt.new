    find . -type f -iname "$pattern" -not -path "*/node_modules/*" -not -path "*/.git/*" | while read file; do
        echo "  ðŸ—‘ï¸  Ð£Ð´Ð°Ð»ÑÐµÐ¼: $file"
        git rm -f "$file" 2>/dev/null || rm -f "$file"
    done
